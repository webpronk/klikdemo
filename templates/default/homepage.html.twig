{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}
{% block submenu %}

{% endblock %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.homepage'|trans|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">

                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('security_login') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'menu.login'|trans }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('app_register') }}">
                        <i class="fa fa-user-plus" aria-hidden="true"></i> {{ 'menu.register'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
