{% extends 'base.html.twig' %}

{% block submenu %}
{% endblock %}


{% block body_id 'favo_list' %}

{% block main %}

<div class="container body-container">
    {% if favorites %}
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4 mb-4">
            <h4>Favorieten</h4>
        </div>

    </div>
    {% endif %}
    <div class="row favorites">
    {% for favorite in favorites %}

        <div class="col-md-4">
        </div>
        <div class="col-md-4 mb-4">
            {% set user  = favorite %}
            {%  include('lists/list_profile_template.html.twig') %}
        </div>
        <div class="col-md-4">
        </div>

    {% else %}
        <div class="col-md-4">
        </div>
        <div class="col-md-4 card-body">
            <div class="card-text">{{ 'database.no_favorites_found'|trans }}</div>
        </div>
        <div class="col-md-4">
        </div>
    {% endfor %}
    </div>
</div>

{% endblock %}

